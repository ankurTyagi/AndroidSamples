<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btn_Start_Schedular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start job Service" />
    <Button
        android:id="@+id/btn_Stop_Schedular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop job Service" />
    <Button
        android:id="@+id/btn_Start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Service" />

    <Button
        android:id="@+id/btn_Stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Service" />
    <Button
        android:id="@+id/btn_Start_frgrnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Forground Service" />

    <Button
        android:id="@+id/btn_Stop_frgrnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Forground Service" />
</LinearLayout>